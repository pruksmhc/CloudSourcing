<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/list_item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="30dp"
            tools:text="1"/>

        <com.cloudsourcing.android.cloudsourcing.RoundProfilePictureView
            android:id="@+id/list_item_profile_picture"
            android:layout_toRightOf="@id/list_item_position"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/list_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_item_profile_picture"
            android:paddingTop="10dp"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Insert Full Name Here"/>.

        <TextView
            android:id="@+id/list_item_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_username"
            android:layout_toRightOf="@id/list_item_profile_picture"
            android:layout_marginLeft="4dp"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Insert Rank Here"/>

        <TextView
            android:id="@+id/hyphen_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_item_rank"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/list_item_username"
            android:text=" - "
            />

        <TextView
            android:id="@+id/list_item_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hyphen_separator"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/list_item_username"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Insert Points Here"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
